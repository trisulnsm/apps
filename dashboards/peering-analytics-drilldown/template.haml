.drilldown_data_form
  .card
    .card-header
      %h5.card-title
        %i.fa.fa-search
         Search Criteria
    .card-body
        %form.drilldown_asn_form.form-dots
          .row
            .col-6
              .row
                .new_time_selector#new_time_selector
            .col-6
              .row
                 %label.con-from-label.col-4 ASNumber         
                .col-8 
                  %input{type:"text",class:"form-control",id:"drilldown_asn",style:"width:300px"}
                  %span.form-help Enter ASNumber Ex.15169
          .row.justify-content-center.mt-3
            .col-auto
              %input#from_date{type:"hidden",name:"from_date"}
              %input#to_date{type:"hidden",name:"to_date"}
              %input.btn-submit{id:"btn_submit",name:"commit",type:"submit",value:"Drilldown"}
              
.drilldown_data.mt-3
  .row
    .col-12
      #progress_bar_analytics
      %h5.card-title.text-white.target
      %ul#peering_drilldown_tabs.nav.nav-tabs.tab-card.border-top-0.border-start-0.border-end-0.border.border-primary.rounded-4.bg-white
        %li.nav-item
          %a.nav-link.active{data-bs-target:"#peering_drilldown_0",data-bs-toggle:"tab",role:"tab",href:"javascript:;;"}
            %i.fa.fa-cloud-upload.fa-fw
            %i.fa.fa-download.fa-fw
            Recv from Upstream
            %span.volume_0
        %li.nav-item
          %a.nav-link{data-bs-target:"#peering_drilldown_1",data-bs-toggle:"tab",role:"tab",href:"javascript:;;"}
            %i.fa.fa-cloud-upload.fa-fw
            %i.fa.fa-upload.fa-fw
            Trans to Upstream
            %span.volume_1
        %li.nav-item
          %a.nav-link{data-bs-target:"#peering_drilldown_2",data-bs-toggle:"tab",role:"tab",href:"javascript:;;"} 
            %i.fa.fa-cloud-download.fa-fw
            %i.fa.fa-download.fa-fw
            Recv from Downstream
            %span.volume_2
         
        %li.nav-item
          %a.nav-link{data-bs-target:"#peering_drilldown_3",data-bs-toggle:"tab",role:"tab",href:"javascript:;;"} 
            %i.fa.fa-cloud-download.fa-fw
            %i.fa.fa-upload.fa-fw
            Trans to Downstream
            %span.volume_3
        %li.nav-item
          %a.nav-link{data-bs-target:"#peering_drilldown_agg",data-bs-toggle:"tab",role:"tab",href:"javascript:;;"}
            %i.fa.fa-table.fa-fw
            Prefixes and Hosts
      .tab-content.mt-3
        .tab-pane.active#peering_drilldown_0{data-use-width:1}
          .row
            .col-12.toppers_table_div
              .card.border-primary.add_download_btn
                .card-header.bg-primary.d-flex.justify-content-between.align-items-center
                  %h5.card-title.text-white
                    %i.fa.fa-table.fa-fw
                    Top Interfaces As Receive
                    %small.text-light Show top 100 interfaces by Receive (Downloading from upstream) 
                    %span.badge.bg-info.bg-white.rounde-pill.text-priamry.ms-2.fs-6
                  .col-auto.card-options.d-flex.gap-2.justify-content-end
                  .row
                    %p
                      %small.text-light.target
                .card-body
                  .toppers_table
                    %table
                      %thead
                      %tbody
                  .animated-background
            .row.mt-3
              .col-12.traffic_chart_div
                .card.border-primary
                  .card-header.bg-primary
                    %h5.card-title.text-white
                      %i.fa.fa-area-chart.fa-fw 
                      Stacked area chart  
                      %small.text-light Showing top Interface traffic receive from upstream over the selected time period 
                    %p
                      %small.text-light.target
                  .card-body
                    .traffic_chart
                    .animated-background
            .row.mt-3
              .col-12.donut_chart_div
                .card.border-primary
                  .card-header.bg-primary.d-block
                    %h5.card-title.text-white
                      %i.fa.fa-pie-chart.fa-fw 
                      Percent share of Interface traffic receive from upstream
