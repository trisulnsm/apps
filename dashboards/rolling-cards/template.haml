#rc_search_form
  %form#fkeymatch.form-dots.form-lg{style:"width: 100%;"}
    .row
      .col-6
        .row.mb-3
          %label.col-form-label.col-4 Counter Group
          .col-8
            %select#rc_counter_group{name:"counter[guid]"}
      .col-6
        .row.mb-3
          %label.col-form-label.col-4 Meters
          .col-8
            %select#rc_meters{multiple:"multiple", name:"meter[]",size:"1"}
    
    .row 
      .col-6
        .row.mb-5
          %label.col-form-label.col-4 Meter Count
          .col-8
            %input.form-control#meter_count{type: "number",value:"10",placeholder:"Meter Count"}

    .row
      .col-12.offset-md-5
        %input#submit_btn.btn.btn-primary{type:"submit", value:"Search"}

