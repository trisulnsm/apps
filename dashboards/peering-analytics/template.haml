.row.ui_form
  .col-xs-12
    .widget
      .widget-header
        %h4 
          %i.fa.fa-filter.fa-fw
          Filter criteria
      .widget-body
        %form.form-horizontal
          .row
            .col-xs-6
              .form-group
                .new_time_selector#new_time_selector
          .row
            .col-xs-6
              .form-group 
                %label.control-label.col-xs-4 Routers         
                .col-xs-8 
                  %select#routers{name:'routers'} 
            .col-xs-6
              .form-group 
                %label.control-label.col-xs-4 Interfaces 
                .col-xs-8 
                  %select#interfaces{name:'interfaces'}
          .row
            .col-xs-10.col-md-offset-4{style:"padding-top:10px"}
              %input#from_date{type:"hidden",name:"from_date"}
              %input#to_date{type:"hidden",name:"to_date"}
              %input.btn-submit{id:"btn_submit",name:"commit",type:"submit",value:"Submit"}



.ui_data
  .row
    .col-xs-12
      %ul.nav.nav-tabs#isp_overview_tabs
        %li.active
          %a{href:"#isp_overview_0",data-toggle:"tab",role:"tab"}
            %i.fa.fa-upload.fa-fw
            Upload to AS
        %li
          %a{href:"#isp_overview_1",data-toggle:"tab",role:"tab"} 
            %i.fa.fa-download.fa-fw
            Downloading from AS 
      .tab-content
        .tab-pane.active#isp_overview_0{data-use-width:1}
          .row
            .col-xs-12.overall_traffic_chart_div
              .panel.panel-success
                .panel-heading
                  %h3
                    %i.fa.fa-line-chart.fa-fw 
                    Upload Traffic Chart 
                    %small Shows total upload volume in selected time interval
                    %span.badge.badge-info
                  %p
                    %small.target

                .panel-body
                  .overall_traffic_chart
                  .animated-background
          .row
            .col-xs-12.toppers_table_div
              .panel.panel-success
                .panel-heading
                  %h3 
                    %i.fa.fa-table.fa-fw
                    Top Upload AS 
                    %small Show top 100 AS to which you are uploading data
                    %span.badge.badge-info
                  %p
                    %small.target
                .panel-body
                  .toppers_table
                    %table
                      %thead
                      %tbody
                  .animated-background
          .row
            .col-xs-12.traffic_chart_div
              .panel.panel-success
                .panel-heading
                  %h3
                    %i.fa.fa-area-chart.fa-fw 
                    Stacked area chart  
                    %small Showing top AS upload traffic over the selected time period 
                  %p
                    %small.target
                   
                .panel-body
                  .traffic_chart
                  .animated-background
          .row
            .col-xs-12.donut_chart_div
              .panel.panel-success
                .panel-heading
                  %h3
                    %i.fa.fa-pie-chart.fa-fw 
                    Percent share of AS upload traffic 
                  %p
                    %small.target
                .panel-body
                  .donut_chart
                  .animated-background
          .row
            .col-xs-12.sankey_chart_div
              .panel.panel-success
                .panel-heading
                  %h3 
                    %i.fa.fa-random.fa-fw 
                    Sankey Chart 
                    %small
                      Shows upload traffic flows from the left side (AS) to the right (ISP routers). Thickness represents volume of traffic. Put your mouse over a node to show actual values. 
                .panel-body
                  .sankey_chart
                  .animated-background
        .tab-pane#isp_overview_1{data-use-width:1}
          .row
            .col-xs-12.overall_traffic_chart_div
