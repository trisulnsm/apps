          .row
            .col-xs-12.traffic_chart_div
              .panel.panel-warning
                .panel-heading
                  %h3
                    %i.fa.fa-area-chart.fa-fw 
                    Stacked area chart  
                    %small Showing top AS download traffic over the selected time period 
                  %p
                    %small.target
                   
                .panel-body
                  .traffic_chart
                  .animated-background
          .row
